@model IEnumerable<PilotProject.Models.MedicType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            name
        </th>
        <th>
            medics
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.medicTypeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.medicTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.medicTypeID })
        </td>
        <td>
			@item.name
        </td>
        <td>
			@(item.medics == null ? "None" : item.medics.Count.ToString())
        </td>
    </tr>
}

</table>


