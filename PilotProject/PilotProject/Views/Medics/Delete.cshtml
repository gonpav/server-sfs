@model PilotProject.Models.Medic

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Medic</legend>

    <div class="display-label">customField</div>
    <div class="display-field">@Model.customField</div>

    <div class="display-label">nameFull</div>
    <div class="display-field">@Model.nameFull</div>

    <div class="display-label">nameShort</div>
    <div class="display-field">@Model.nameShort</div>

    <div class="display-label">type</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.type).ToString()</div>

    <div class="display-label">flowsheets</div>
    <div class="display-field">@(Model.flowsheets == null ? "None" : Model.flowsheets.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


